<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- unselected -->
    <item android:drawable="@color/button_default_bg_unselect" android:state_selected="false" android:state_pressed="false" />

    <!-- focused and pressed -->
    <item android:drawable="@color/button_default_bg_hover" android:state_selected="false" android:state_focused="true" />
    <item android:drawable="@color/button_default_bg_hover" android:state_selected="false" android:state_pressed="true" />

    <!-- selected -->
    <item android:drawable="@color/button_default_bg_select" android:state_selected="true" />

</selector>
