<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- unselected -->
    <item android:drawable="@color/project_medium_grey" android:state_selected="false" android:state_pressed="false" />

    <!-- focused and pressed -->
    <item android:drawable="@color/project_dark_grey" android:state_selected="false" android:state_focused="true" />
    <item android:drawable="@color/project_dark_grey" android:state_selected="false" android:state_pressed="true" />

    <!-- selected -->
    <item android:drawable="@color/project_mayflower_orange_default" android:state_selected="true" />

</selector>
