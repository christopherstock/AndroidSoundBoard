<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- unselected -->
    <item android:drawable="@drawable/tabbed_pane_tab_item_fg_unselect" android:state_selected="false" android:state_pressed="false" />

    <!-- focused and pressed -->
    <item android:drawable="@drawable/tabbed_pane_tab_item_fg_hover" android:state_selected="false" android:state_focused="true" />
    <item android:drawable="@drawable/tabbed_pane_tab_item_fg_hover" android:state_selected="false" android:state_pressed="true" />

    <!-- selected -->
    <item android:drawable="@drawable/tabbed_pane_tab_item_fg_select" android:state_selected="true" />

</selector>
