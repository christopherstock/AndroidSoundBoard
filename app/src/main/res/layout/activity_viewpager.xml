<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="de.mayflower.soundboard.state.SoundBoardViewPager"
    >

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewpager_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/viewpager_pager_tab_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/viewpager_bg"
            android:textColor="@color/viewpager_fg"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

    </android.support.v4.view.ViewPager>

</LinearLayout>
