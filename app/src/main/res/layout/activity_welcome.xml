<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="insideOverlay"
    android:scrollbarThumbHorizontal="@drawable/scrollbar"
    android:scrollbarThumbVertical="@drawable/scrollbar"
    android:scrollbarSize="@dimen/scrollbar_size"
    android:fadingEdgeLength="@dimen/fading_edge_size"
    android:fadeScrollbars="true"
    android:paddingLeft="@dimen/screen_border_x"
    android:paddingRight="@dimen/screen_border_x"
    android:paddingTop="@dimen/screen_border_y"
    android:paddingBottom="@dimen/screen_border_x"
    tools:context="de.mayflower.soundboard.state.SoundBoardWelcome"
    android:requiresFadingEdge="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/element_padding_x"
        android:paddingRight="@dimen/element_padding_x"
        android:paddingTop="@dimen/element_padding_y"
        android:paddingBottom="@dimen/element_padding_y"
        >

        <include
            layout="@layout/image_title_logo"
            android:id="@+id/image_title_logo"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <include
                layout="@layout/button_default"
                android:id="@+id/button_welcome"
                />

            <include
                layout="@layout/button_special"
                android:id="@+id/button_show_main_screen"
                />

        </LinearLayout>

        <include
            layout="@layout/text_default"
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_padding_y"
            />

    </LinearLayout>

</ScrollView>
